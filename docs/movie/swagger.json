{
    "swagger": "2.0",
    "info": {
        "title": "Movie Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "http://localhost",
    "basePath": "/v1",
    "paths": {
        "/movies": {
            "get": {
                "security": [
                    {
                        "Bearer token": []
                    }
                ],
                "description": "Retrieve all movies created by the authenticated member",
                "produces": [
                    "application/json"
                ],
                "summary": "Get all movies by creator",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/movies.MovieDTO"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "Bearer token": []
                    }
                ],
                "description": "Create a new movie associated with the authenticated member",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Create a new movie",
                "parameters": [
                    {
                        "description": "Create Movie",
                        "name": "movie",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/movies.CreateMovieDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/movies.MovieDTO"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "movies.CreateMovieDTO": {
            "type": "object",
            "required": [
                "actor",
                "name"
            ],
            "properties": {
                "actor": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "star": {
                    "type": "integer",
                    "maximum": 5,
                    "minimum": 1
                }
            }
        },
        "movies.MovieDTO": {
            "type": "object",
            "properties": {
                "actor": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "created_by": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "star": {
                    "type": "integer"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    }
}